# Application
NEXT_PUBLIC_APP_NAME=NovelHub
NEXT_PUBLIC_APP_DESCRIPTION=Ultimate Web Novel Platform
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/novelhub

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
NEXTAUTH_DEBUG=false

# JWT
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@novelhub.com

# File Upload (Optional)
FILE_UPLOAD_MAX_SIZE=5242880
FILE_UPLOAD_DIR=./public/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Redis (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Search Service (Optional)
ELASTICSEARCH_URL=http://localhost:9200

# AWS S3 (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Third-party Services
GITHUB_ID=
GITHUB_SECRET=
GOOGLE_ID=
GOOGLE_SECRET=

# Feature Flags
FEATURE_DARK_MODE=true
FEATURE_SOCIAL_SHARING=true
FEATURE_COMMENTS=true
FEATURE_RATINGS=true

# Node Environment
NODE_ENV=development
